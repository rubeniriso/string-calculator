{
    "name": "rubeniriso/string-calculator",
    "description": "String Calculator Kata",
    "type": "project",
    "require": {
        "php": "^7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.3.10"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "RubenIriso\\StringCalculatorKata\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RubenIriso\\StringCalculatorKata\\Test\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true
    },
    "scripts": {
        "test": [
            "phpunit --configuration phpunit.xml"
        ]
    }
}
